<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc62b3a0">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/iesi"
            android:textStyle="bold|italic"
            android:textSize="20dp"
            android:text="Please choose a picture .. "
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />
        <Button
            android:text="Camera"
            android:layout_below="@+id/iesi"
            android:onClick="onCameraLaunched"
            android:theme="@style/MyButton2"
            android:id="@+id/cc"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="Gallery"
            android:id="@+id/gg"
            android:theme="@style/MyButton2"
            android:onClick="onGalleryLaunched"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_below="@id/iesi"
            android:layout_toRightOf="@+id/cc"/>

    </RelativeLayout>

</LinearLayout>