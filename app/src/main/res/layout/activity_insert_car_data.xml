<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back3"
    android:gravity="right|center"
    android:orientation="vertical"
    tools:context="carpoolingapplication.carpooling.com.InsertCarData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#302f4b4b"
        android:orientation="vertical"
        android:padding="5dp">

        <EditText
            android:id="@+id/car_branch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car Branch" />

        <EditText
            android:id="@+id/car_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car type" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Passengers No :" />

            <Spinner
                android:id="@+id/car_passenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender :" />

            <Spinner
                android:id="@+id/user_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/user_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Car OwnerShip ID"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road info :" />

            <Spinner
                android:id="@+id/car_road"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/insert_img"
            android:layout_marginTop="20dp"
            android:text="insert Car image"
            android:theme="@style/MyButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <carpoolingapplication.carpooling.com.classes.RoundedImageView
            android:id="@+id/img_car"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

    </LinearLayout>

    <Button
        android:id="@+id/register_user"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:theme="@style/MyButton" />

</LinearLayout>
