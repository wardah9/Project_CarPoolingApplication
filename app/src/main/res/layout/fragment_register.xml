<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/first_ex"
    android:hint="Enter your first Name"
    android:drawableLeft="@drawable/usericon"
    android:drawablePadding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/roundshapebt"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter your last Name"
    android:drawableLeft="@drawable/usericon"
    android:drawablePadding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/roundshapebt"
    android:id="@+id/last_ex"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/first_ex"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter your number"
    android:drawableLeft="@drawable/phoneicon"
    android:drawablePadding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/roundshapebt"
    android:id="@+id/number_ex"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/last_ex"/>
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter your email"
    android:drawableLeft="@drawable/mailicon"
    android:drawablePadding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/roundshapebt"
    android:id="@+id/email_ex"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/number_ex"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Enter password (4 digits)"
    android:drawableLeft="@drawable/keysicon"
    android:drawablePadding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/roundshapebt"
    android:id="@+id/pass_ex"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/email_ex"/>

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Retype password (4 digits)"
    android:drawableLeft="@drawable/keysicon"
    android:drawablePadding="10dp"
    android:paddingLeft="10dp"
    android:background="@drawable/roundshapebt"
    android:id="@+id/repass_ex"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/pass_ex"/>
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="REGISTER"
    android:textSize="25sp"
    android:textStyle="bold"
    android:textColor="@android:color/holo_green_light"
    android:background="@drawable/greenborder"
    android:layout_marginTop="10dp"
    android:layout_below="@+id/repass_ex"/>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="LOGIN"
    android:textStyle="bold"
    android:textSize="25sp"
    android:drawableTop="@drawable/addusericon"
    android:layout_alignParentBottom="true"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="HELP"
    android:textStyle="bold"
    android:textSize="25sp"
    android:drawableTop="@drawable/addusericon"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"/>



</RelativeLayout>

