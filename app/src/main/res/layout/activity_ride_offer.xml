<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3fff1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/s1Text"
        android:text="Source: "
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/sText"
        android:layout_alignBottom="@+id/sText"
        android:layout_alignStart="@+id/dText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sText"
        android:layout_toRightOf="@+id/s1Text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:hint="Source" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d1Text"
        android:layout_below="@+id/s1Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Destination" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dText"
        android:layout_below="@+id/sText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:hint="Destination" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:id="@+id/tText"
        android:layout_marginTop="40dp"
        android:hint="Time"
        android:layout_below="@+id/dText"
        android:layout_alignStart="@+id/sText"
        android:layout_alignEnd="@+id/sText" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateText"
        android:layout_marginTop="40dp"
        android:hint="Date"
        android:layout_below="@+id/tText"
        android:layout_alignStart="@+id/sText"
        android:layout_alignEnd="@+id/sText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/search"
        android:layout_below="@+id/dateText"
        android:layout_marginTop="44dp"
        android:layout_alignEnd="@+id/dText" />
</RelativeLayout>